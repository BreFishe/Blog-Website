<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= sentHomeContent %></p>

<% array.forEach(function(element){ %>
    <div>
        <h1> <%= element.title %> </h1>
<%      let hrefLink = "http://localhost:3000/post/"+lodash.kebabCase(element.title) %>

<%      if(element.content.length > 100) {%>
<%        let cutVer = element.content.substring(0,100)+"..."; %>
          <div>
              <p><%= cutVer %> <a href= <%= hrefLink %>>Read More!</a></p>
          </div>
<%      } else { %>
<%        let cutVer = element.content; %>
          <div>
              <p><%= cutVer %> <a href= <%= hrefLink %>>Read More!</a></p>
          </div>
<%      } %>
    </div>
<% //console.log(element.title) %>
<% }); %>

